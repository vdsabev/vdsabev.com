{
  "private": true,
  "name": "vdsabev.com",
  "scripts": {
    "build": "webpack -p --env.production --display-modules",
    "build:assets": "cd src && svgo avatar.svg && svg2png avatar.svg -w 100",
    "start": "webpack-dev-server --port 3000 --history-api-fallback",
    "deploy": "npm run build && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "npm run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "classwrap": "1.1.0",
    "hyperapp": "0.14.0"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "clean-webpack-plugin": "0.1.17",
    "css-loader": "0.28.7",
    "extract-text-webpack-plugin": "3.0.1",
    "file-loader": "1.1.5",
    "firemail": "1.4.0",
    "html-webpack-plugin": "2.30.1",
    "postcss-cssnext": "3.0.2",
    "postcss-loader": "2.0.6",
    "style-loader": "0.19.0",
    "var": "0.3.1",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.9.1",
    "webpack-null-plugin": "0.0.2",
    "webpack-pwa-manifest": "3.3.2",
    "workbox-webpack-plugin": "2.1.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 5,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "env": {
      "es6": true
    }
  }
}
