{
  "private": true,
  "name": "vdsabev.com",
  "scripts": {
    "build": "cmless build",
    "build:assets": "cd src && svgo avatar.svg && svg2png avatar.svg -w 100",
    "profile": "cmless profile",
    "start": "cmless start",
    "deploy": "npm run build && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "npm run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "@hyperapp/router": "0.4.1",
    "classcat": "1.1.1",
    "derpy": "0.4.0",
    "picodom": "1.0.2"
  },
  "devDependencies": {
    "cmless": "0.2.1",
    "firemail": "1.4.0"
  },
  "cmless": {
    "script": "src/index.ts"
  },
  "babel": {
    "presets": [
      "react",
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 3 versions",
              "> 1%"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 5,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      }
    },
    "env": {
      "es6": true
    }
  }
}
