{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": false,

    "baseUrl": "src",
    "lib": ["dom", "es5", "es2015"],
    "module": "commonjs",
    "target": "es5",
    "typeRoots" : [
      "./node_modules/@types",
      "./src/types"
    ],

    "jsx": "react",
    "jsxFactory": "h"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
